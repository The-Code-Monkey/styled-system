{
  "version": "1.0.501",
  "license": "MIT",
  "name": "@techstack/styled-system",
  "homepage": "https://styled-system-docs.vercel.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/The-Code-Monkey/styled-system.git"
  },
  "bugs": {
    "url": "https://github.com/The-Code-Monkey/styled-system/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/styled-system.esm.js",
  "exports": {
    "import": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/styled-system.esm.js"
    },
    "require": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "typings": "dist/types/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "tcm watch",
    "build": "tcm build",
    "test": "tcm test",
    "lint": "tcm lint",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "author": "The-Code-Monkey",
  "size-limit": [
    {
      "path": "dist/styled-system.esm.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/file": "11.2.0",
    "@techstack/tcm-cli": "1.4.48",
    "@types/jest": "29.5.14",
    "jest": "29.7.0",
    "size-limit": "11.2.0",
    "styled-components": "6.1.16",
    "ts-jest": "29.2.6",
    "tslib": "2.8.1",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "1.3.1",
    "@techstack/memoize": "1.3.302",
    "csstype": "3.1.3",
    "react": "18.3.1"
  },
  "gitHead": "7bb2bc7bbce0432773369ca533adf6d1719e877a",
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript"
    ],
    "plugins": [
      "import"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "latest",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "rules": {
      "@typescript-eslint/no-empty-function": "off",
      "import/no-unresolved": "off",
      "import/no-named-as-default": "off",
      "import/no-anonymous-default-export": "off",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ]
    }
  }
}
